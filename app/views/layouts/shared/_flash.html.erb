<section class="bg-white">
  <div class="container px-1 px-md-5">
    <div class="row">

      <div class="mb-3">
        <% if flash.any? %>
          <% flash.keys.each do |key| %>
            <%= render partial: 'layouts/shared/flash_msg', locals: { alert_class: flash_alert_class(key), message: flash[key] } %>
          <% end %>
        <% end %>
      </div>

    </div>
  </div>
</section>
