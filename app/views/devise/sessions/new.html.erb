<div class='row my-5'>
  <div class='col-10 col-md-4 offset-md-4 offset-1'>
    <div class="card rounded-3 text-dark">
      <div class="card-header py-4">Sign In</div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="field mb-3">
            <%= f.label :email, class: 'small text-gray-600' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>

          <div class="field mb-3">
            <%= f.label :password, class: 'small text-gray-600' %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field mb-3">
              <%= f.check_box :remember_me, class: 'small text-gray-600' %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions mb-3">
            <%= f.submit "Log in", class: 'form-control btn btn-primary' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
